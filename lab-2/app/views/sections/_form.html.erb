<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :course_id, "Course (do not change this)" %>
    <%= form.number_field :course_id, value: @course_id %>
    </div>
  </div>

  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :sectionNumber, "Section Number" %>
    <%= form.number_field :sectionNumber %>
    </div>
  </div>
  
  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :instructor, "Instructor Name" %>
    <%= form.text_field :instructor %>
    </div>
  </div>

  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :instructorEmail, "Instructor Email" %>
    <%= form.text_field :instructorEmail %>
    </div>
  </div>

  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :term, "Term" %>
    <%= form.text_field :term %>
    </div>
  </div>

  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :buildingAndRoom, "Location" %>
    <%= form.text_field :buildingAndRoom %>
    </div>
  </div>

  <div class="field">
    <div class = "sub-section-edit-all">
    <%= form.label :numGradersNeeded, "Graders Needed" %>
    <%= form.number_field :numGradersNeeded %>
    </div>
  </div>

  <div class="actions">
    <div class = "sub-section-edit-all">
    <%= form.submit %>
    </div>
  </div>
<% end %>
